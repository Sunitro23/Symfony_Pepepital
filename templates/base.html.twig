<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<div class="container-fluid">
				<ul class="navbar-nav">
					<div class="d-flex justify-content-stretch">
						<a class="navbar-brand" href="https://www.youtube.com/watch?v=oHg5SJYRHA0">
							<img src="https://emoji.gg/assets/emoji/3256_coronaHands.png" alt="PepeLogo" width="40">
						</a>
						{% if is_granted('ROLE_PATIENT') %}
                        <li class="nav-item">
							<a class="nav-link" href="{{ path('app_patient') }}">Mon compte</a>
						</li>
						{% endif %}
						{% if is_granted('ROLE_ASSISTANT') %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_rdv') }}">Rendez-vous</a>
						</li>
						{% endif %}
						{% if is_granted('ROLE_MEDECIN') %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_register') }}">Créer un compte</a>
						</li>
						{% endif %}
						{% if app.user is null %}
                        <li class="nav-item">
							<a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
						</li>
						{% else %}
                        <li class="nav-item">
							<a class="nav-link">Connecté en tant que {{app.user.username}}</a>
						</li>
						<li>
							<a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
						{% endif %}
						</li>
					</div>
				</ul>
			</div>
		</nav>
	</header>
	<body>
		{% block body %}{% endblock %}
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</body>
</html>