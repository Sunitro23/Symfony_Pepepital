{% extends 'base.html.twig' %}

{% block title %}Pepepital - Ajouter une indisponibilité{% endblock %}

{% block body %}

<div class="container rounded bg-white">
    {{form_start(form)}}
        <div class="form-group">
            {{form_row(form.debut)}}
        </div>
        <div class="form-group">
            {{form_row(form.fin)}}
        </div>
        <div class="form-group">
            {{form_row(form.libelle, {
                'label': 'Note :'
            })}}
        </div>
        <button type="submit" class="btn btn-primary m-1">Valider l'indisponibilité</button>
    {{form_end(form)}}
</div>

{% endblock %}
