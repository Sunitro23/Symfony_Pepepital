{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Créer un objet patient</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.adresse) }}
        {{ form_row(registrationForm.mail) }}
        {{ form_row(registrationForm.submit) }}
    {{ form_end(registrationForm) }}

    <a href="{{ path('app_register_patient') }}"><button>J'ai déjà créé un objet patient, passer à la création du compte</button></a>
{% endblock %}